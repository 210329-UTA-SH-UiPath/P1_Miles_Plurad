@using PizzaBox.Client.Controllers
@using System.Linq

@{
    ViewData["Title"] = "Create Order";
}

<h2>Order Details</h2>
<p>
    @{
        if (ConsumerController._order.Pizzas.Count == 0)
            {
                <p>No pizzas added</p>
        }
        else
        {
            <p>You have @ConsumerController._order.Pizzas.Count pizzas with a total bill of
    $@ConsumerController._order.Cost.</p>
        }
    }
</p>
<a asp-action="AddPizza">Add Custom Pizza</a><br />
